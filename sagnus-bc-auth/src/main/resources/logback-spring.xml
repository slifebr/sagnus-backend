<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!--
      Mostra correlationId (MDC) em todos os logs.
      O filtro CorrelationIdFilter popula MDC["correlationId"] para cada request.
      Se não houver (logs fora de request), aparece "-".
    -->

    <property name="CONSOLE_LOG_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{36} - [cid:%X{correlationId:-}] %msg%n"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- níveis sugeridos para dev -->
    <logger name="org.springframework" level="INFO"/>
    <logger name="org.hibernate" level="WARN"/>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>
